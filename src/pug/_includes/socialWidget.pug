	var socials = [
		{
			title: 'vk',
			icon: 'vkontakte',	
			link: '#',		
		},
		{
			title: 'Facebook',
			icon: 'facebook',			
			link: '#',		
		},
		{
			title: 'Одноклассники',
			icon: 'odnoklassniki',			
